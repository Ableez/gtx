{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2023"],
    "target": "esNext",
    "types": ["firebase"],

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",

    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "firebase.js",
    ".next/types/**/*.ts",
    "src/components/landing/scroll-hero.tsx",
    "src/app/(admin)/admin/(non-auth)/advanced-settings/delete-user/_components",
    "src/lib/utils/adminActions/create-admin.ts"
  ],
  "exclude": ["node_modules"],
  "files": ["node_modules/gsap/types/index.d.ts"]
}
